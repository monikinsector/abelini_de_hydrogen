{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "types": [
      "@shopify/oxygen-workers-types",
      "react-router",
      "@shopify/hydrogen/react-router-types",
      "vite/client",
      "jest",
      "@testing-library/jest-dom"
    ],
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true
  },
  "include": [
    "tests/**/*.ts",
    "tests/**/*.tsx",
    "app/**/*.ts",
    "app/**/*.tsx"
  ]
}
